
<h1 class="title"> Articulos - Tienda</h1>

<div class="container">
    {{#each productos}}


    <div class="product-card">
        <div class="product-image-container">
            <img src="{{this.thumbnails}}" alt="{{this.title}}" class="product-image" />
        </div>
        <div class="product-content">
            <div class="product-header">
                <p class="product-title">{{this.title}} </p>
                <p class="product-price">s/. {{this.price}} </p>
            </div>
            <p class="product-description">
                {{this.description}}
            </p>

        </div>
    </div>
    {{/each}}
</div>

<!-- Paginación -->
<div class="pagination">
    <p>Página {{pagination.currentPage}} de {{pagination.totalPages}}</p>
    
    <div class="pagination-buttons">
        {{#if pagination.hasPrevPage}}
            <a href="?page={{pagination.prevPage}}&limit={{pagination.limit}}" class="btn">Anterior</a>
        {{/if}}

        {{#if pagination.hasNextPage}}
            <a href="?page={{pagination.nextPage}}&limit={{pagination.limit}}" class="btn">Siguiente</a>
        {{/if}}
    </div>
</div>